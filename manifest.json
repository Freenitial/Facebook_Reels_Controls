{
  "manifest_version": 3,
  "name": "Facebook Reels Controls",
  "version": "1.0",
  "description": "Add controls to Facebook Reels (Download, Progress bar, Volume)",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/reel*",
        "https://m.facebook.com/reel*",
        "https://mbasic.facebook.com/reel*"
      ],
      "js": ["content.js"]
    }
  ]
}
