{
  "manifest_version": 3,
  "name": "Facebook Reels Controls",
  "version": "1.1",
  "description": "Add controls to Reels for Facebook & Instagram (Download, Progress bar, Volume)",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
